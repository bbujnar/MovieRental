<Window x:Class="MovieRental.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Username:" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtUsername" Margin="5" KeyDown="TextBox_KeyDown"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Password:" Margin="5"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="txtPassword" Margin="5" KeyDown="TextBox_KeyDown"/>
        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Login" Click="btnLogin_Click" Margin="5"/>
        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" x:Name="txtMessage" Margin="5" />
    </Grid>
</Window>